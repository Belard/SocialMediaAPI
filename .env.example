# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/multiplatform?sslmode=disable

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Token Encryption Key (CHANGE IN PRODUCTION!)
TOKEN_ENCRYPTION_KEY=your-super-secret-token-encryption-key-change-in-production

# Server Configuration
PORT=8080
BASE_URL=http://localhost:8080

# Upload Configuration
UPLOAD_DIR=./uploads

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_client_id
FACEBOOK_APP_SECRET=your_facebook_client_secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/auth/facebook/callback

# Instagram OAuth Configuration (Meta Graph API)
# If omitted, INSTAGRAM_APP_ID and INSTAGRAM_APP_SECRET fallback to FACEBOOK_APP_ID and FACEBOOK_APP_SECRET.
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:8080/auth/instagram/callback

# TLS Configuration (optional â€” for native HTTPS)
# Set TLS_ENABLED=true and generate certs with: make generate-cert
TLS_ENABLED=false
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key